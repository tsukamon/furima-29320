<% @item.each do |item| %>
<li class='list'>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.name %>
    </h3>
    <div class='item-price'>
      <span><%= item.price %>円<br>(税込み)</span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <%= link_to item_path(item.id) do %>
  <div class='item-img-content'>
  <% item.images.each do |image| %>
      <%= image_tag image, class: "item-img" %> 
   <%# <%= image_tag item.images, class: "item-img" %> 
  <% end %> 
    <%# 商品が売れていればsold outの表示 %>
    <% unless item.purchase_item.blank? %>
    <div class='sold-out'>
      <span>Sold Out!!</span>
    </div>
    <% end %>
    <%# //商品が売れていればsold outの表示 %>
  </div>
  <% end %>
</li>
<% end %>
